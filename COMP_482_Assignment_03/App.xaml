<Application x:Class="COMP_482_Assignment_03.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:COMP_482_Assignment_03"
             xmlns:Utility="clr-namespace:COMP_482_Assignment_03.Utility"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Utility:BoolToVisibilityConverter x:Key="IsEditConverter"/>
        <Utility:NullToVisibilityConverter x:Key="SelectedItemConverter"/>
        <Utility:InverseBooleanConverter x:Key="InverseBoolConverter"/>
        <Utility:NullToEnabledConverter x:Key="NullToEnabledConverter"/>
        <Utility:Authenticator x:Key="AuthenticationConverter"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="15"/>
        </Style>

    </Application.Resources>
</Application>
